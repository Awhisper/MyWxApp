.storeContainer {
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
} 

.banner {
  width: 100%;
  height: 126px;
  border-bottom:1px solid gray;
}

.bannerItem{
  width: 100%;
  height: 126px;
}

.listBar {
  flex-direction: row;
  width:100%;
  height: 30px;
  line-height: 30px;
  border-bottom:1px solid gray;
}

.listBookContainer {
  width: 100%;
  height: 150px;
  border-bottom:1px solid gray;
  display: flex;
  flex-direction: row;
}

.listBookCover{
  flex: 1;
  width: 110px;
  height: 150px;
}

.listBookDesc{
  flex: 2;
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.listBookTitleText{
  font-size:15px;
  color: gray;
  margin: 10px; 
  height: 15px;
}

.listBookTextInfo{
  font-size:10px;
  color: gray;
  margin: 5px 5px 5px 10px; 
  height: 10px;
}

.listBookTextDescInfo{
  font-size:10px;
  color: gray;
  margin: 5px 5px 5px 10px; 
  height: 23px;
  overflow: hidden;
}

.textLeft {
  font-size:15px;
  color: gray;
  margin-left: 10px;
}

.textRight {
  font-size:15px;
  color: gray;
  float: right;
  margin-right: 10px;
}